{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ecommerce.example.com/schemas/payment-completed.v1.json",
  "title": "Payment Completed Event",
  "description": "Event published when a payment is successfully completed",
  "type": "object",
  "required": [
    "eventId",
    "eventVersion",
    "occurredAt",
    "paymentId",
    "orderId",
    "userId",
    "amount"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "eventVersion": {
      "type": "string",
      "examples": ["1.0"]
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "paymentId": {
      "type": "integer",
      "format": "int64",
      "description": "Internal payment identifier"
    },
    "orderId": {
      "type": "integer",
      "format": "int64"
    },
    "userId": {
      "type": "integer",
      "format": "int64"
    },
    "amount": {
      "type": "number",
      "minimum": 0
    }
  },
  "additionalProperties": false
}
