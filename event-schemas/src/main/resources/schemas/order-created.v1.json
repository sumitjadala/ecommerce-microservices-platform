{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ecommerce.example.com/schemas/order-created.v1.json",
  "title": "Order Created Event",
  "description": "Event published when a new order is created",
  "type": "object",
  "required": [
    "eventId",
    "eventVersion",
    "occurredAt",
    "orderId",
    "userId",
    "amount"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "eventVersion": {
      "type": "string",
      "description": "Version of the event schema",
      "examples": ["1.0"]
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "orderId": {
      "type": "integer",
      "format": "int64",
      "description": "Unique identifier for the order"
    },
    "userId": {
      "type": "integer",
      "format": "int64",
      "description": "Unique identifier for the user who created the order"
    },
    "amount": {
      "type": "number",
      "minimum": 0,
      "description": "Order amount in the default currency"
    }
  },
  "additionalProperties": false
}
