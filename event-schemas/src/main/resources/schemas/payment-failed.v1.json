{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ecommerce.example.com/schemas/payment-failed.v1.json",
  "title": "Payment Failed Event",
  "description": "Event published when a payment attempt fails",
  "type": "object",
  "required": [
    "eventId",
    "eventVersion",
    "occurredAt",
    "paymentId",
    "orderId",
    "userId",
    "amount",
    "reason"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "eventVersion": {
      "type": "string",
      "examples": ["1.0"]
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "paymentId": {
      "type": "integer",
      "format": "int64"
    },
    "orderId": {
      "type": "integer",
      "format": "int64"
    },
    "userId": {
      "type": "integer",
      "format": "int64"
    },
    "amount": {
      "type": "number",
      "minimum": 0
    },
    "reason": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
