{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ecommerce.example.com/schemas/payment-failed.v1.json",
  "title": "Payment Failed Event",
  "description": "Event published when a payment attempt fails",
  "type": "object",
  "required": [
    "eventId",
    "eventVersion",
    "occurredAt",
    "orderId",
    "userId",
    "amount",
    "reason"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "description": "Unique identifier for this event instance"
    },
    "eventVersion": {
      "type": "string",
      "description": "Version of the event schema",
      "examples": ["1.0"]
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "orderId": {
      "type": "integer",
      "format": "int64",
      "description": "Order ID this payment was for"
    },
    "userId": {
      "type": "integer",
      "format": "int64",
      "description": "User who attempted the payment"
    },
    "amount": {
      "type": "number",
      "minimum": 0,
      "description": "Payment amount that was attempted"
    },
    "reason": {
      "type": "string",
      "description": "Reason for payment failure",
      "examples": [
        "Insufficient funds",
        "Card declined",
        "Payment processing error"
      ]
    }
  },
  "additionalProperties": false
}
